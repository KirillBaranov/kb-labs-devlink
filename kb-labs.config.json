{
  "sync": {
    "enabled": true
  },
  "analytics": {
    "configVersion": 1,
    "enabled": true,
    "buffer": {
      "segmentBytes": 1048576,
      "segmentMaxAgeMs": 60000,
      "fsyncOnRotate": true
    },
    "sinks": [
      {
        "type": "fs",
        "path": ".kb/analytics/events"
      }
    ],
    "middleware": {
      "enrich": {
        "workspace": true,
        "git": true
      }
    }
  }
}